---
const { href, title, content, id } = Astro.props;
---

<a
  class="flex justify-center 2xl:text-lg xl:text-base w-fit items-center gap-1 py-[5px] px-5 2xl:py-2 max-xl:py-1 2xl:px-8 max-xl:px-6 max-lg:px-4 max-sm:px-2 rounded-lg bg-gray-50 hover:bg-gray-100 hover:shadow dark:bg-gray-600 dark:hover:bg-gray-500 dark:text-white"
  href={href}
  target="_blank"
  id={id}
  title={title}
  rel="noopener noreferrer"> <slot name="left"/> {content} <slot/> </a
>
